<p id="notice"><%= notice %></p>

<h1>Rooms</h1>
<%= link_to '<button class="btn btn-primary" type="button">New Room</button>'.html_safe, new_room_path  %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Room number</th>
      <th>Building</th>
      <th>Direction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.building %></td>
        <td><%= room.direction %></td>
        <td><%= link_to '<button class="btn btn-sm btn-primary" type="button">Show</button>'.html_safe, room %></td>
        <td><%= link_to '<button class="btn btn-sm btn-primary" type="button">Edit</button>'.html_safe, edit_room_path(room) %></td>
        <td><%= link_to '<button class="btn btn-sm btn-primary" type="button">Destroy</button>'.html_safe, room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


