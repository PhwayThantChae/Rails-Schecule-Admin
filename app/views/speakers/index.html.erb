<p id="notice"><%= notice %></p>

<h1>Speakers</h1>
<%= link_to '<button class="btn btn-primary" type="button">New Speaker</button>'.html_safe,  new_speaker_path  %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Position</th>
      <th>Profile url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speakers.each do |speaker| %>
      <tr>
        <td><%= speaker.name %></td>
        <td><%= speaker.company %></td>
        <td><%= speaker.position %></td>
        <td><%= speaker.profile_url %></td>
        <td><%= link_to '<button class="btn btn-sm btn-primary" type="button">Show</button>'.html_safe, speaker %></td>
        <td><%= link_to '<button class="btn btn-sm btn-primary" type="button">Edit</button>'.html_safe, edit_speaker_path(speaker) %></td>
        <td><%= link_to '<button class="btn btn-sm btn-primary" type="button">Destroy</button>'.html_safe, speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
