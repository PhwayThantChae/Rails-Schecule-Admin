<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @speaker.name %>
</p>

<p>
  <strong>Company:</strong>
  <%= @speaker.company %>
</p>

<p>
  <strong>Position:</strong>
  <%= @speaker.position %>
</p>

<p>
  <strong>Profile url:</strong>
  <%= @speaker.profile_url %>
</p>
<% if @speaker.schedules.length > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Speaker</th>
      <th>Room</th>
      <th>Topic</th>
      <th>Timeslot</th>
      <th>Slide url</th>
      <th>Video url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speaker.schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.speaker.name %></td>
        <td><%= schedule.room.room_number %></td>
        <td><%= schedule.topic %></td>
        <td><%= schedule.timeslot %></td>
        <td><%= schedule.slide_url %></td>
        <td><%= schedule.video_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<%= link_to 'Edit', edit_speaker_path(@speaker) %> |
<%= link_to 'Back', speakers_path %>
