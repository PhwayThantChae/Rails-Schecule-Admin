<p id="notice"><%= notice %></p>

<h1>Schedules</h1>
<br>
<%= link_to '<button class="btn btn-primary" type="button">New Schecule</button>'.html_safe, new_schedule_path %>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Speaker</th>
      <th>Room</th>
      <th>Topic</th>
      <th>Slide url</th>
      <th>Video url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.speaker %></td>
        <td><%= schedule.room %></td>
        <td><%= schedule.topic %></td>
        <td><%= schedule.slide_url %></td>
        <td><%= schedule.video_url %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


